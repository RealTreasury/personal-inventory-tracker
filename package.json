{
  "name": "personal-inventory-tracker-enhanced",
  "version": "2.0.0",
  "description": "Enhanced WordPress plugin for personal inventory management with modern React frontend, advanced analytics, OCR scanning, and more",
  "main": "assets/app.js",
  "scripts": {
    "build": "node build.js",
    "build:dev": "node build.js --dev",
    "watch": "node build.js --dev --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,md}",
    "analyze": "npm run build && npx webpack-bundle-analyzer assets/stats.json",
    "clean": "rimraf assets/*.js assets/*.css assets/*.map",
    "preinstall": "node -e \"console.log('ðŸ“¦ Installing dependencies for Personal Inventory Tracker Enhanced...')\"",
    "postinstall": "npm run build",
    "prepare": "npm run build",
    "version": "npm run build && git add assets/",
    "deploy": "npm run build && npm run test && echo 'ðŸš€ Ready for deployment!'",
    "dev": "concurrently \"npm run watch\" \"npm run serve\"",
    "serve": "http-server . -p 3001 -c-1",
    "lighthouse": "lighthouse http://localhost:3001 --output html --output-path ./lighthouse-report.html",
    "security:audit": "npm audit && npm audit fix",
    "size-limit": "size-limit",
    "validate": "npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "inventory",
    "management",
    "react",
    "ocr",
    "analytics",
    "mobile",
    "responsive",
    "modern",
    "dashboard",
    "scanning",
    "tracking"
  ],
  "author": "Enhanced by Claude",
  "license": "GPL-2.0+",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/personal-inventory-tracker-enhanced.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/personal-inventory-tracker-enhanced/issues"
  },
  "homepage": "https://github.com/your-username/personal-inventory-tracker-enhanced#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "dependencies": {
    "chart.js": "^4.5.0",
    "esbuild": "^0.25.9",
    "lucide-react": "^0.541.0",
    "papaparse": "^5.4.1",
    "prop-types": "^15.8.1",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "@playwright/test": "^1.55.0",
    "@size-limit/preset-app": "^8.2.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@wordpress/env": "^10.29.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jsx-a11y": "^6.7.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "http-server": "^14.1.0",
    "jest": "^29.6.0",
    "jest-environment-jsdom": "^29.6.0",
    "lighthouse": "^10.4.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "size-limit": "^8.2.0",
    "tailwindcss": "^3.4.18",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "extensionsToTreatAsEsm": [
      ".jsx"
    ],
    "globals": {
      "__DEV__": true
    },
    "transform": {
      "^.+\\.(js|jsx)$": [
        "babel-jest",
        {
          "presets": [
            [
              "@babel/preset-env",
              {
                "targets": {
                  "node": "current"
                }
              }
            ],
            "@babel/preset-react"
          ]
        }
      ]
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/tests/playwright/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "react/prop-types": "warn",
      "react/react-in-jsx-scope": "off",
      "jsx-a11y/click-events-have-key-events": "warn",
      "jsx-a11y/no-noninteractive-element-interactions": "warn"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  },
  "size-limit": [
    {
      "path": "assets/app.js",
      "limit": "200 KB"
    },
    {
      "path": "assets/app.css",
      "limit": "50 KB"
    }
  ],
  "files": [
    "assets/",
    "includes/",
    "templates/",
    "blocks/",
    "personal-inventory-tracker.php",
    "readme.txt",
    "README.md",
    "LICENSE"
  ],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/your-username"
  },
  "config": {
    "wordpress": {
      "tested": "6.4",
      "requires": "5.0",
      "requiresPHP": "7.4"
    }
  }
}
